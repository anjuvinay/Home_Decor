<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>HomeDecor</title>
    <!-- DataTables CSS -->
    <link rel="stylesheet" href="https://cdn.datatables.net/1.10.21/css/jquery.dataTables.min.css">
    <!-- Bootstrap CSS (optional, for styling) -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        body {
            background-color: rgb(236, 239, 236);
            overflow-x: hidden;
        }
        .main-content {
            margin-left: 18%;
            padding: 40px;
            margin-top: 6%;
        }

        .container-fluid {
            padding-left: 40px;
            padding-right: 40px;
        }
        .center-text {
            text-align: center;
            margin-bottom: 7rem;
        }
        .table-container {
            padding-left: 20px;
            padding-right: 20px;
        }
    </style>


</head>
<body>

    <%- include('header') %>
    <%- include('leftnav') %>

    <div class="main-content">
        <h1 class="center-text">User List</h1>
        <section>
            <div class="container-fluid table-container">
                <table class="table mt-5" id="peopleTable">
                    <thead>
                        <tr>
                            <th scope="col">Index</th>
                            <th scope="col">Name</th>
                            <th scope="col">ID</th>
                            <th scope="col">Email</th>
                            <th scope="col">Mobile</th>
                            <th scope="col">Status</th>
                            <th scope="col">Options</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% users.forEach((user, index)=> { %>
                            <tr>
                                 
                                <td><%= index+1 %></td>
                                <td><%= user.name %></td>
                                <td><%= user._id %></td>
                                <td><%= user.email %></td>
                                <td><%= user.mobile %></td>
                                <% if (user.is_active) { %>
                                    <td><span class="badge rounded-pill alert-success">Active</span></td>
                                <% } else { %>
                                    <td><span class="badge rounded-pill alert-danger">Blocked</span></td>
                                <% } %>
                                <td class="text-end">
                                    <% if (user.is_active) { %>
                                        <a onclick="sweet('<%= user._id %>')" class="btn btn-sm btn-brand rounded font-sm mt-15 bg-danger">Block</a>
                                    <% } else { %>
                                        <a onclick="sweetAlert('<%= user._id %>')" class="btn btn-sm btn-brand rounded font-sm mt-15 bg-success">Unblock</a>
                                    <% } %>
                                </td>
                            </tr>
                        <% } )%>
                    </tbody>
                </table>
            </div>
        </section>
    </div>

    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <!-- Bootstrap JS (optional, for Bootstrap styling) -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <!-- DataTables JS -->
    <script src="https://cdn.datatables.net/1.10.21/js/jquery.dataTables.min.js"></script>
    <script>
        $(function() {
            $('#peopleTable').DataTable();
        });
    </script>
</body>
</html>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
                        <script>
                     function sweet(userId) {
                        Swal.fire({
                            title: "Are you sure?",
                            text: "You want to block User!",
                            icon: "warning",
                            showCancelButton: true,
                            confirmButtonColor: "#3085d6",
                            cancelButtonColor: "#d33",
                            confirmButtonText: "Yes, Block User!"
                        }).then((result) => {
                            if (result.isConfirmed) {
                                Swal.fire({
                                    title: "Blocked!",
                                    text: "User has been blocked.",
                                    icon: "success"
                                }).then((res) => {
                                    if (res.isConfirmed) {
                                        // Redirect after the second confirmation
                                        window.location.href = `blockUser?id=${userId}`;
                                    }
                                });
                            }
                        });
                    }
                            
                        </script>
                          <script>
                            function sweetAlert(userId) {
                               Swal.fire({
                                   title: "Are you sure?",
                                   text: "You want to Unblock User!",
                                   icon: "warning",
                                   showCancelButton: true,
                                   confirmButtonColor: "#3085d6",
                                   cancelButtonColor: "#d33",
                                   confirmButtonText: "Yes, Unblock User!"
                               }).then((result) => {
                                   if (result.isConfirmed) {
                                       Swal.fire({
                                           title: "Unblocked!",
                                           text: "User has been Unblocked.",
                                           icon: "success"
                                       }).then((res) => {
                                           if (res.isConfirmed) {
                                               // Redirect after the second confirmation
                                               window.location.href = `unBlockUser?id=${userId}`;
                                           }
                                       });
                                   }
                               });
                           }
                                   
                               </script>
